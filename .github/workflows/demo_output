name: Demo Output

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - run: |
        # Obtenemos la fecha actual
        fecha=$(date)
        # Generamos un nÃºmero aleatorio
        numero_aleatorio=$((RANDOM % 100))
        # Generamos un mensaje
        mensaje="Hola, mundo!"
        # Establecemos los outputs
        echo "fecha": "$fecha" >> $GITHUB_ENV
        echo "numero_aleatorio": "$numero_aleatorio" >> $GITHUB_ENV
        echo "mensaje": "$mensaje" >> $GITHUB_ENV
      - echo "${output.fecha}"
      - echo "${output.numero_aleatorio}"
      - echo "${output.mensaje}"
